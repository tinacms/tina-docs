{
  "name": "tina-docs",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "tinacms dev -c \"next dev --turbopack\"",
    "build": "tinacms build && next build",
    "postbuild": "npx pagefind --site .next --output-path .next/static/pagefind",
    "build-local-pagefind": "tinacms build && next build && npx pagefind --site .next --output-subdir ../public/pagefind",
    "start": "tinacms build && next start",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check src/"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@monaco-editor/react": "^4.7.0",
    "fast-glob": "^3.3.3",
    "lodash": "^4.17.21",
    "mermaid": "^11.6.0",
    "monaco-editor": "^0.52.2",
    "motion": "^12.11.3",
    "next": "^15.3.2",
    "prism-react-renderer": "^2.4.1",
    "prismjs": "^1.30.0",
    "react": "^19.1.0",
    "react-animate-height": "^3.2.3",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "rehype-pretty-code": "^0.14.1",
    "shiki": "^3.4.1",
    "tinacms": "^2.7.7",
    "typescript": "5.8.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@shikijs/transformers": "^3.4.1",
    "@tailwindcss/postcss": "^4.1.6",
    "@tinacms/cli": "^1.9.7",
    "@types/node": "^22.15.18",
    "autoprefixer": "^10.4.21",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "pagefind": "^1.3.0",
    "postcss": "^8.5.3",
    "postcss-preset-env": "^10.1.6",
    "tailwindcss": "^4.1.6",
    "worker-loader": "^3.0.8"
  },
  "packageManager": "pnpm@9.15.2"
}
